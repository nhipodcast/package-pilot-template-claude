{
  "name": "package-pilot-vs",
  "displayName": "packagePilot",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/estruyf/vscode-react-webview-template",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "packagePilot.analyzeCurrentFile",
        "title": "Package Pilot: Analyze Current File"
      },
      {
        "command": "packagePilot.analyzeFolder",
        "title": "Package Pilot: Analyze Folder"
      },
      {
        "command": "packagePilot.analyzeProject",
        "title": "Package Pilot: Analyze Project"
      },
      {
        "command": "packagePilot.analyzePickedFiles",
        "title": "Package Pilot: Analyze Selected Files from List"
      },
      {
        "command": "packagePilot.analyzeSelectedFiles",
        "title": "Package Pilot: Analyze Selected Files"
      },
      {
        "command": "packagePilot.openWebview",
        "title": "Package Pilot: Open Dashboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId =~ /(javascript|typescript|javascriptreact|typescriptreact)/",
          "command": "packagePilot.analyzeCurrentFile",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "packagePilot.analyzeFolder",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId =~ /(javascript|typescript|javascriptreact|typescriptreact)/",
          "command": "packagePilot.analyzeCurrentFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Package Pilot",
      "properties": {
        "packagePilot.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI services (optional)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ext": "webpack --mode development --watch --config ./webpack/extension.config.js",
    "watch:wv": "webpack serve --mode development --config ./webpack/webview.config.js",
    "package": "npm run clean && npm-run-all --parallel package:*",
    "package:ext": "webpack --mode production --config ./webpack/extension.config.js",
    "package:wv": "webpack --mode production --config ./webpack/webview.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "clean": "rimraf dist",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@estruyf/vscode": "^1.1.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.71.0",
    "@types/webpack": "^5.28.1",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "autoprefixer": "^10.4.16",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "3.3.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.7.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.8.4"
  }
}